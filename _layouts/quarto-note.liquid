---
layout: default
---
<!-- Quarto Integration Styles -->
<link rel="stylesheet" href="{{ '/assets/css/quarto-integration.css' | relative_url }}">

{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
    {% if page.author %}
      <p class="post-meta">By {{ page.author }}</p>
    {% endif %}
  </header>

  {% comment %} Series navigation - show at top if multi-part series {% endcomment %}
  {% unless page.series_landing %}
    {% include series_navigation.liquid %}
  {% endunless %}

  <article class="quarto-content">
    {% comment %} If this is a series landing page, show series contents {% endcomment %}
    {% if page.series_landing %}
      {{ content }}
      {% include series_landing.liquid %}
    {% else %}
      {{ content }}
    {% endif %}
  </article>

  {% comment %} Series navigation - show at bottom if multi-part series {% endcomment %}
  {% unless page.series_landing %}
    {% include series_navigation.liquid %}
  {% endunless %}
</div>
