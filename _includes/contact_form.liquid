{% assign contact = site.data[site.active_lang].strings.contact %}

<div class="contact-container">
  <div class="contact-header">
    <h2>{{ contact.header }}</h2>
    {% if include.show_test_warning %}
    <p class="contact-intro">
      <strong style="color: #ff6b6b;">{{ contact.test_warning }}</strong>
    </p>
    {% endif %}
    <p class="contact-intro">
      {{ contact.intro }}
    </p>
  </div>

  <div class="contact-sections">
    <div class="contact-section">
      <h3>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
          <circle cx="12" cy="10" r="3"></circle>
        </svg>
        {{ contact.office_title }}
      </h3>
      <div class="address-block">
        <strong>{{ contact.office_name }}</strong><br>
        {{ contact.office_department }}<br>
        {{ contact.office_address_line1 }}<br>
        {{ contact.office_address_line2 }}<br>
        {{ contact.office_country }}
      </div>
    </div>

    <div class="contact-section">
      <h3>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
        </svg>
        {{ contact.github_title }}
      </h3>
      <p>
        {{ contact.github_text }}
      </p>
    </div>
  </div>

  <div class="contact-form-wrapper">
    <h3>{{ contact.form_title }}</h3>
    <form class="contact-form" id="contact-form" method="POST" action="{{ include.endpoint }}">
      <!-- Hidden field to identify language -->
      <input type="hidden" name="language" value="{{ site.active_lang }}">

      <div class="form-group">
        <label for="name">{{ contact.name_label }} <span class="required">{{ contact.required }}</span></label>
        <input type="text" id="name" name="name" required>
      </div>

      <div class="form-group">
        <label for="email">{{ contact.email_label }} <span class="required">{{ contact.required }}</span></label>
        <input type="email" id="email" name="email" required>
      </div>

      <div class="form-group">
        <label for="subject">{{ contact.subject_label }} <span class="required">{{ contact.required }}</span></label>
        <input type="text" id="subject" name="subject" required>
      </div>

      <div class="form-group">
        <label for="message">{{ contact.message_label }} <span class="required">{{ contact.required }}</span></label>
        <textarea id="message" name="message" rows="6" required></textarea>
      </div>

      {% if include.captcha_key %}
      <div class="form-group">
        <div class="h-captcha" data-sitekey="{{ include.captcha_key }}"></div>
      </div>
      {% endif %}

      <button type="submit" class="submit-button" data-submit-text="{{ contact.submit_button }}" data-sending-text="{{ contact.sending_text }}">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="22" y1="2" x2="11" y2="13"></line>
          <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
        </svg>
        {{ contact.submit_button }}
      </button>
    </form>

    <div id="form-status"
         data-success-message="{{ contact.success_message }}"
         data-error-message="{{ contact.error_message }}">
    </div>
  </div>
</div>
