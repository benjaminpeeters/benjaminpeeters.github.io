import { SITE_AUTHOR, GITHUB_USERNAME, ORCID, GOOGLE_SCHOLAR_URL, LINKEDIN_URL, SITE_TITLE } from '../consts';

const today = new Date();

// Get current language from URL
const currentPath = Astro.url.pathname;
let currentLang = 'en';
if (currentPath.startsWith('/fr')) {
	currentLang = 'fr';
} else if (currentPath.startsWith('/zh')) {
	currentLang = 'zh';
}

const getLanguageUrl = (lang: string) => {
	if (lang === 'en') {
		return currentPath.replace(/^\/(fr|zh)/, '') || '/';
	} else {
		if (currentPath.startsWith('/fr') || currentPath.startsWith('/zh')) {
			return currentPath.replace(/^\/(fr|zh)/, `/${lang}`);
		} else {
			return `/${lang}${currentPath}`;
		}
	}
};

