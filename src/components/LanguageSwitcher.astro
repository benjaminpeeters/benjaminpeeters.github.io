// Language Switcher Component with cookie persistence
const currentPath = Astro.url.pathname;

// Determine current language from path
let currentLang = 'en';
if (currentPath.startsWith('/fr')) {
  currentLang = 'fr';
} else if (currentPath.startsWith('/zh')) {
  currentLang = 'zh';
}

// Generate URLs for other languages
const getLanguageUrl = (lang: string) => {
  if (lang === 'en') {
    // Remove /fr or /zh prefix
    return currentPath.replace(/^\/(fr|zh)/, '') || '/';
  } else {
    // Add language prefix
    if (currentPath.startsWith('/fr') || currentPath.startsWith('/zh')) {
      return currentPath.replace(/^\/(fr|zh)/, `/${lang}`);
    } else {
      return `/${lang}${currentPath}`;
    }
  }
};

