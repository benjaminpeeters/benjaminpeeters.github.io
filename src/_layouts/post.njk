---
layout: base.njk
---

<article class="post">
  <header class="post-header">
    <h1>{{ title }}</h1>

    <div class="post-meta">
      <time datetime="{{ date | htmlDateString }}">
        {{ locales[lang].blog.publishedOn }} {{ date | readableDate }}
      </time>

      {% if updated %}
      <span class="post-updated">
        {{ locales[lang].blog.updatedOn }} {{ updated | readableDate }}
      </span>
      {% endif %}

      {% if tags %}
      <div class="post-tags">
        {% for tag in tags %}
          <span class="tag">{{ tag }}</span>
        {% endfor %}
      </div>
      {% endif %}
    </div>
  </header>

  <div class="post-content">
    {{ content | safe }}
  </div>

  <footer class="post-footer">
    <a href="/{{ lang }}/blog/" class="back-link">‚Üê {{ locales[lang].blog.title }}</a>
  </footer>
</article>
